
<%- include("header") -%>

    <div class="box" id="heading">
        <h1><%= kindOfDay %></h1>
    </div>

    <div class="box">
        <% listItems.forEach(function(item) { %>
            <form action="/delete" method="post">
                <div class="item">
                    <input onchange="this.form.submit()" type="checkbox" name="checkBox" value="<%=item._id %>">
                    <p><%= item.name %></p>
                </div>
                <input type="hidden" name="hiddenInput" value="<%= kindOfDay %>"></input>

            </form>
        <% }) %>

        <form class="item" action="/" method="post">
            <input type="text" name="listItem" placeholder="New Item" autocomplete="off" required>
            <button type="submit" name="listName" value= "<%= kindOfDay %>">+</button>
        </form>
    </div>

<%- include("footer") -%>
